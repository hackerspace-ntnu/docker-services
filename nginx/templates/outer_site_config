
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    ssl_dhparam /etc/ssl/certs/dhparam.pem;

    server_name {subdomain}.hackerspace-ntnu.no www.{subdomain}.hackerspace-ntnu.no {subdomain}.idi.ntnu.no www.{subdomain}.idi.ntnu.no;

    client_max_body_size 100M;

    location /static/ {
            alias /code/static;
    }

    location /media/ {
            alias /code/media;
    }

    location / {
            include proxy_params;
            proxy_pass http://0.0.0.0:{port};
    }
}
