server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name www.hackerspace-ntnu.no hackerspace-ntnu.no www.hackerspace.idi.ntnu.no hackerspace.idi.ntnu.no

    location / {
        access_log /var/log/nginx/dev/page/access.log;
        error_log /var/log/nginx/dev/page/error.log;

        include proxy_params;
        proxy_pass http://0.0.0.0:8000;
    }
}


server {
    listen 80;
    listen [::]:80;

    server_name .hackerspace-ntnu.no .hackerspace.idi.ntnu.no;
    return 301 https://$server_name$request_uri;

    root /var/www/html;

    location ~/.well-known {
        allow all;
    }
}
